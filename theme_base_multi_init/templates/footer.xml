<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="theme_name_website_footer_custom" inherit_id="website_multi_theme.auto_view_fir_website_footer_custom">
        <xpath expr="//div[@id='footer']//div[hasclass('row')]" position="replace">
            <div class="row">
                <div class="col-md-4">
                    <h4>Quiénes somos</h4>
                    <ul class="list-unstyled">
                        <li><a href="#" alt="XXX Group Link" title="XXX Group" rel="nofollow">Grupo XXX</a></li>
                    </ul>
                    <h4>Prensa</h4>
                    <ul class="list-unstyled">
                        <li><a href="/blog">Noticias</a></li>
                    </ul>
                    <h4>Síguenos</h4>
                    <ul class="list-unstyled">
                        <li><a href="/page_newsletter" alt="Blog Link" title="Blog" rel="nofollow">Newsletter</a></li>
                        <li><a href="#" target="_blank" alt="LinkedIn Link" title="LinkedIn" rel="nofollow">LinkedIn</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h4>Marcas del grupo</h4>
                    <ul class="list-unstyled">
                        <li><a href="#" alt="XXX Brand Page" title="XXX Brand Page" rel="nofollow">XXX</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h4>Contacto</h4>
                    <ul class="list-unstyled">
                        <li>Grupo XXX</li>
                        <li>
                            <i class="fa fa-map-marker"/>
                            <a href="https://goo.gl/maps/Hm78jxSEG5B2" target="_blank" alt="Company Link" title="Company" rel="nofollow">
                                <t t-esc="res_company.street"/>,
                                <t t-esc="res_company.zip"/>,
                                <t t-esc="res_company.city"/>
                            </a>
                        </li>
                        <li><i class="fa fa-phone"/><a t-field="res_company.phone" t-att-href="'tel:%s' %res_company.phone"/></li>
                        <li><i class="fa fa-envelope"/><a t-field="res_company.email" t-att-href="'mailto:%s' %res_company.email"/></li>
                    </ul>
                </div>
            </div>
        </xpath>
    </template>

</odoo>