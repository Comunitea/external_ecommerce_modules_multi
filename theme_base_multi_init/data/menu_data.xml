<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <data noupdate="1">

            <!--Main menu-->
            <record id="first_website_main_menu" model="website.menu">
                <field name="name">Main Menu</field>
                <field name="website_id" ref="website_base_multi_init.first_website"/>
                <field name="website_published">True</field>
            </record>

            <!--Home Menu-->
            <record id="first_website_menu_homepage" model="website.menu">
                <field name="name">Home</field>
                <field name="url">/</field>
                <field name="parent_id" ref="first_website_main_menu"/>
                <field name="sequence" type="int">10</field>
                <field name="website_id" ref="base.main_company"/>
                <field name="website_published">True</field>
            </record>

            <!-- split between ir_ui_view & website_page record to keep external_id on ir_ui_view -->
            <record id="first_website_homepage" model="ir.ui.view">
                <field name="name">Home</field>
                <field name="type">qweb</field>
                <field name="key">website.homepage</field>
                <field name="arch" type="xml">
                    <t name="Home" priority="29" t-name="first_website_homepage">
                        <t t-call="website.layout">
                            <t t-set="pageName" t-value="'homepage'"/>
                            <div id="wrap" class="oe_structure oe_empty"/>
                        </t>
                    </t>
                </field>
            </record>
            <record id="first_website_homepage_page" model="website.page">
                <field name="website_published">True</field>
                <field name="url">/</field>
                <field name="view_id" ref="first_website_homepage" />
            </record>
            <record id="first_website" model="website">
                <field name="homepage_id" ref="first_website_homepage_page" />
            </record>

        </data>
</odoo>